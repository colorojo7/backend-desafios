<h1 class="text-center p-5">HOME</h1>

<h2 class="text-center p-2">Lista de productos con HTTP </h2>
<div class="d-flex justify-content-center">
    <a href='/realtimeproducts' class="btn btn-warning">Ver realTimeProducts</a>

</div>

<div class="d-flex flex-row flex-wrap justify-content-start container-sm">
    {{#each productsToShow}}
    
    <div class="col-3 p-4">
        <div class="card " >
            <img src="img/noImage.png"class="card-img-top" alt="product image">
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                <p >USD <span class="text-danger-emphasis fw-bold">{{this.price}}</span></p>
                <a href="/product" class="btn btn-primary">See details</a>
            </div>
        </div>
    </div>
    {{/each}}   
</div>

